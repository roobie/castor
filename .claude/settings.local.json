{
  "permissions": {
    "allow": [
      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo build:*)",
      "Bash(cargo run:*)",
      "mcp__serena__list_dir",
      "mcp__serena__get_symbols_overview",
      "Bash(uv run ruff:*)",
      "Bash(uv run pytest:*)",
      "Bash(just test:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(beans query:*)",
      "Bash(beans create:*)",
      "Bash(beans update:*)",
      "Bash(./target/debug/casq:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "beans prime"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "beans prime"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "mise run fmt"
          }
        ]
      }
    ]
  }
}
